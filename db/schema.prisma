// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  VISITOR
  COMMUTOR
  STAFF
}

// A user profile
model Contributor {
  id          Int           @id @default(autoincrement())
  name        String
  handle      String
  address     String
  pronouns    String
  role        Role          @default(VISITOR)
  skills      Skill[]
  terminals   Terminal[]
  initiatives Initiative[]
  application Application[]
}

// Each DAO is represented by a termial.
model Terminal {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  initiatives  Initiative[]
  contributors Contributor[]
}

// An initiaitve within a terminal
model Initiative {
  id           Int           @id @default(autoincrement())
  name         String
  description  String
  terminal     Terminal      @relation(fields: [terminalId], references: [id])
  terminalId   Int
  contributors Contributor[]
  applications Application[]
}

// An application into a certain initiative
model Application {
  id            Int         @id @default(autoincrement())
  url           String
  contributor   Contributor @relation(fields: [contributorId], references: [id])
  contributorId Int
  initiative    Initiative  @relation(fields: [initiativeId], references: [id])
  initiativeId  Int
}

// A user can have many skills
// I wanted this in its own table (as opposed to a field of contributor)
// so its easier to do things like show new user existing skills
// or even "grouping" skills in the future by type (design, eng etc)
model Skill {
  id           Int           @id @default(autoincrement())
  name         String
  contributors Contributor[]
}
